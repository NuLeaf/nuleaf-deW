{
  "name": "nuleaf-dew",
  "version": "1.0.0",
  "description": "Front end angular2 application for NuLEAF Technologies.",
  "scripts": {
    "start": "tsc && npm run copy:app:static && concurrently 'npm run tsc:w' 'lite-server' ",
    "server": "node server.js",
    "clean": "rm -rf dist typings node_modules aot",
    "copy:app:static": "copyfiles -u 1 'app/**/*.html' 'app/**/*.css' dist",
    "postinstall": "typings install",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "build:aot": "npm run ngc:aot && npm run rollup:aot && npm run copy:aot && npm run clean:aot",
    "ngc:aot": "ngc -p tsconfig-aot.json",
    "rollup:aot": "rollup -c rollup-config.js",
    "copy:aot": "npm run copy:aot:shim && npm run copy:aot:zone && npm run copy:aot:static",
    "copy:aot:shim": "copyfiles -f node_modules/core-js/client/shim.min.js aot",
    "copy:aot:zone": "copyfiles -f node_modules/zone.js/dist/zone.min.js aot",
    "copy:aot:static": "copyfiles public aot && cp index-aot.html aot/index.html",
    "clean:aot": "rm -rf aot/app && rm -rf dist"
  },
  "author": "Tuan Pham (https://github.com/ttpham0111",
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "~4.0.0",
    "@angular/common": "~4.0.0",
    "@angular/compiler": "~4.0.0",
    "@angular/compiler-cli": "~4.0.0",
    "@angular/core": "~4.0.0",
    "@angular/forms": "~4.0.0",
    "@angular/http": "~4.0.0",
    "@angular/platform-browser": "~4.0.0",
    "@angular/platform-browser-dynamic": "~4.0.0",
    "@angular/router": "~4.0.0",
    "body-parser": "^1.17.1",
    "core-js": "^2.4.1",
    "express": "^4.15.2",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.1",
    "systemjs": "0.19.40",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "concurrently": "^3.2.0",
    "lite-server": "^2.2.2",
    "copyfiles": "^1.0.0",
    "rollup": "^0.36.4",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "typescript": "~2.1.0",
    "typings": "^1.3.2"
  }
}
